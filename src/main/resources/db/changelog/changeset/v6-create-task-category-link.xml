<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                       https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="2025-12-26-create-task-category-link" author="student">
        <createTable tableName="task_category">
            <column name="task_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="category_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey tableName="task_category" columnNames="task_id,category_id" constraintName="pk_task_category"/>

        <addForeignKeyConstraint constraintName="fk_task_category_task"
                                 baseTableName="task_category"
                                 baseColumnNames="task_id"
                                 referencedTableName="task"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"/>

        <addForeignKeyConstraint constraintName="fk_task_category_category"
                                 baseTableName="task_category"
                                 baseColumnNames="category_id"
                                 referencedTableName="category"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"/>
    </changeSet>
</databaseChangeLog>